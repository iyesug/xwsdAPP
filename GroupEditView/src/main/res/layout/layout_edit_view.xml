<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <ImageView
        android:id="@+id/group_edeit_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/group_edeit_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/group_edeit_image"
        android:background="@null"
        android:paddingLeft="10dp"
        android:textColor="@color/tv_white"
        android:textColorHint="@color/tv_white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/group_edeit_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/login_clear"
        android:visibility="gone" />

    <Button
        android:id="@+id/group_edeit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:paddingLeft="5dp"
        android:text="获取验证码"
        android:textColor="@color/tv_white"
        android:textSize="12sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1sp"
        android:layout_alignParentBottom="true"
        android:background="@color/tv_white"></View>
</RelativeLayout>