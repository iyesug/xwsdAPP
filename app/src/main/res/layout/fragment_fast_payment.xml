<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/gray_bg"
             android:descendantFocusability="beforeDescendants"
             android:focusable="true"
             android:focusableInTouchMode="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/DIMEN_12"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/ll_add_bank_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="@color/gray_2"
                                android:textSize="@dimen/TEXT_L"/>

                        <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/DIMEN_10"
                                android:layout_weight="1"
                                android:padding="@dimen/DIMEN_10"
                                android:text="快捷支付需要绑定银行卡，请绑定银行卡"
                                android:textColor="@color/gray_1"
                                android:textSize="@dimen/TEXT_L"/>

                        <ImageView
                                android:layout_width="@dimen/DIMEN_15"
                                android:layout_height="@dimen/DIMEN_15"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/DIMEN_15"
                                android:src="@mipmap/ic_in_g"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/ll_bank_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <View
                                style="@style/GreyInterval"
                                android:layout_marginLeft="@dimen/DIMEN_15"></View>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <ImageView
                                    android:id="@+id/iv_bank"
                                    android:layout_width="@dimen/DIMEN_15"
                                    android:layout_height="@dimen/DIMEN_15"
                                    android:layout_marginLeft="@dimen/DIMEN_20"
                                    android:layout_gravity="center"
                                    android:background="@drawable/circle"
                                    android:textColor="@color/gray_2"
                                    android:textSize="@dimen/TEXT_L"/>

                            <TextView
                                    android:id="@+id/tv_bank_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/DIMEN_10"
                                    android:text="中国银行"
                                    android:textColor="@color/gray_2"
                                    android:textSize="@dimen/TEXT_L"/>

                            <TextView
                                    android:id="@+id/tv_bank_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:padding="@dimen/DIMEN_10"
                                    android:text="尾号(0000)"
                                    android:textColor="@color/gray_1"
                                    android:textSize="@dimen/TEXT_L"/>

                        </LinearLayout>

                        <View
                                style="@style/GreyInterval"
                                android:layout_marginLeft="@dimen/DIMEN_15"></View>


                        <LinearLayout
                                android:id="@+id/ll_money"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/DIMEN_20"

                                    android:text="充值金额"
                                    android:textColor="@color/gray_2"
                                    android:textSize="@dimen/TEXT_L"/>

                            <EditText
                                    android:id="@+id/tv_money"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="@dimen/DIMEN_10"
                                    android:layout_marginRight="@dimen/DIMEN_10"
                                    android:layout_weight="1"
                                    android:inputType="number"
                                    android:background="@color/white"
                                    android:hint="不少于100元"
                                    android:gravity="right"
                                    android:padding="@dimen/DIMEN_10"
                                    android:textColor="@color/gray_1"
                                    android:textColorHint="@color/gray_text"
                                    android:textSize="@dimen/TEXT_L"/>


                        </LinearLayout>


                        <LinearLayout
                                android:id="@+id/ll_info"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/DIMEN_10"
                                android:layout_marginRight="@dimen/DIMEN_10"
                                android:clickable="true"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_marginTop="@dimen/DIMEN_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/no_support"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/TEXT_S"/>

                        </LinearLayout>


                        <View
                                style="@style/GreyInterval"
                                android:layout_marginLeft="@dimen/DIMEN_15"></View>

                        <LinearLayout
                                android:id="@+id/ll_commit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/DIMEN_40"
                                >

                            <Button
                                    android:id="@+id/commit"
                                    style="@style/SubmitButton"
                                    android:layout_margin="@dimen/DIMEN_10"
                                    android:background="@drawable/select_submit_button_simple"
                                    android:text="确认提交"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:padding="@dimen/DIMEN_10"
                        android:layout_marginTop="@dimen/DIMEN_10"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值说明："
                            android:textColor="@color/text_orange"
                            android:textSize="@dimen/TEXT_XL"/>

                    <TextView
                            android:layout_marginTop="@dimen/DIMEN_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Top_up_instructions1"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/TEXT_S"/>

                    <TextView
                            android:id="@+id/tv_list"
                            android:layout_marginTop="@dimen/DIMEN_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Top_up_instructions2"
                            android:textColor="@color/blue_simple"
                            android:textSize="@dimen/TEXT_S"/>

                    <TextView
                            android:layout_marginTop="@dimen/DIMEN_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Top_up_instructions3"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/TEXT_S"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <com.xwsd.app.view.EmptyLayout
            android:id="@+id/error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"></com.xwsd.app.view.EmptyLayout>

</FrameLayout>