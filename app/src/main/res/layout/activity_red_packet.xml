<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_simple"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1"
        android:background="@color/gray"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg">

        <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/DIMEN_1"
                android:background="@color/white"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/bt_recharge"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/DIMEN_40"
                    android:layout_marginBottom="@dimen/DIMEN_5"
                    android:layout_marginLeft="@dimen/DIMEN_30"
                    android:layout_marginRight="@dimen/DIMEN_15"
                    android:layout_marginTop="@dimen/DIMEN_5"
                    android:layout_weight="1"
                    android:background="@drawable/select_pay_button"
                    android:text="@string/comfirm_buttom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/TEXT_L" />

            <Button
                    android:id="@+id/bt_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/DIMEN_40"
                    android:layout_marginBottom="@dimen/DIMEN_5"
                    android:layout_marginLeft="@dimen/DIMEN_15"
                    android:layout_marginRight="@dimen/DIMEN_30"
                    android:layout_marginTop="@dimen/DIMEN_5"
                    android:layout_weight="1"
                    android:background="@drawable/select_withdraw_button"
                    android:text="@string/cancel_buttom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/TEXT_L" />

        </LinearLayout>

        <FrameLayout
                android:id="@+id/ll_bank_card_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom">

            <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/swipe_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ListView
                        android:scrollbars="none"
                        android:id="@+id/list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="@dimen/DIMEN_15"
                        android:padding="@dimen/DIMEN_10"></ListView>

            </android.support.v4.widget.SwipeRefreshLayout>





        </FrameLayout>
        <!--<com.xwsd.app.view.EmptyLayout-->
                <!--android:id="@+id/error_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:visibility="visible"></com.xwsd.app.view.EmptyLayout>-->
    </RelativeLayout>

</LinearLayout>