<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_simple"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar"></include>

    <View style="@style/GreyInterval"></View>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_bg"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_50"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/DIMEN_15">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="账户余额"
                            android:textColor="@color/gray_1"
                            android:textSize="@dimen/TEXT_L" />

                    <EditText
                            android:id="@+id/et_fundMoney"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/DIMEN_20"
                            android:layout_weight="1"
                            android:editable="false"
                            android:inputType="number"
                            android:text="0.00元"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/DIMEN_10"
                            android:textColor="@color/text_orange"
                            android:textSize="@dimen/TEXT_M" />

                </LinearLayout>

                <View
                    style="@style/GreyInterval"
                    android:layout_marginLeft="@dimen/DIMEN_15"></View>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_50"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/DIMEN_15">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="迁移资金"
                            android:textColor="@color/gray_1"
                            android:textSize="@dimen/TEXT_L" />

                    <EditText
                            android:id="@+id/et_money"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/DIMEN_20"
                            android:layout_weight="1"
                            android:hint="请输入迁移金额"
                            android:inputType="number"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/DIMEN_10"
                            android:textColor="@color/gray_1"
                            android:textSize="@dimen/TEXT_M"/>
                    <TextView
                            android:id="@+id/tv_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/DIMEN_12"
                            android:layout_gravity="center"
                            android:text="最大金额"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/TEXT_L" />
                </LinearLayout>

            </LinearLayout>

            <Button
                    android:id="@+id/commit"
                    style="@style/SubmitButton"
                    android:layout_marginLeft="@dimen/DIMEN_15"
                    android:layout_marginRight="@dimen/DIMEN_15"
                    android:layout_marginTop="@dimen/DIMEN_30"
                    android:background="@drawable/select_submit_button_simple"
                    android:text="@string/confirm" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/DIMEN_10"
                    android:text="温馨提示："
                    android:textColor="@color/text_orange"
                    android:textSize="@dimen/TEXT_XL" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/DIMEN_10"
                    android:layout_marginLeft="@dimen/DIMEN_10"
                    android:layout_marginRight="@dimen/DIMEN_10"
                    android:layout_weight="1"
                    android:text="@string/money_transfer_tip"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/TEXT_L" />        </LinearLayout>

    </ScrollView>

</LinearLayout>
