<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue_s"
        android:padding="@dimen/DIMEN_10"
        android:text="@string/find_new_version"
        android:textColor="@color/white_milk"
        android:textSize="@dimen/DIMEN_20" />

    <TextView
        android:id="@+id/tv_version_des"
        android:layout_width="match_parent"
        android:textColor="@color/gray_1"
        android:text="是否立即更新到最新版本？"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/DIMEN_20"
        android:textSize="@dimen/DIMEN_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_10">

        <Button
            android:id="@+id/bt_update_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_30"
            android:layout_weight="1"
            android:background="@drawable/selctor_buttonb_1"
            android:text="@string/download"
            android:textColor="@color/white_milk"
            android:textSize="@dimen/DIMEN_15" />

        <Button
            android:id="@+id/bt_update_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selctor_buttonb_2"
            android:text="@string/cancel"
            android:textColor="@color/white_milk"
            android:textSize="@dimen/DIMEN_15" />
    </LinearLayout>

</LinearLayout>