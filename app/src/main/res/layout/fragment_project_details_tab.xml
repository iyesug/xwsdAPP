<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_10"
        android:layout_marginLeft="@dimen/DIMEN_15"
        android:layout_marginRight="@dimen/DIMEN_15"
        android:layout_marginTop="@dimen/DIMEN_15"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="借款人档案"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/TEXT_L" />

    <LinearLayout
        android:id="@+id/ll_group_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_10">

        <com.xwsd.app.view.TitleTextView
            android:id="@+id/ttv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:text_size="@dimen/TEXT_S"></com.xwsd.app.view.TitleTextView>

        <View
            android:id="@+id/v_1"
            android:layout_width="@dimen/DIMEN_1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_10"
            android:layout_marginRight="@dimen/DIMEN_10"
            android:background="@color/gray_text"></View>

        <com.xwsd.app.view.TitleTextView
            android:id="@+id/ttv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:text_size="@dimen/TEXT_S"></com.xwsd.app.view.TitleTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_group_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_10">

        <com.xwsd.app.view.TitleTextView
            android:id="@+id/ttv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:text_size="@dimen/TEXT_S"></com.xwsd.app.view.TitleTextView>

        <View
            android:id="@+id/v_2"
            android:layout_width="@dimen/DIMEN_1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_10"
            android:layout_marginRight="@dimen/DIMEN_10"
            android:background="@color/gray_text"></View>

        <com.xwsd.app.view.TitleTextView
            android:id="@+id/ttv_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:text_size="@dimen/TEXT_S"></com.xwsd.app.view.TitleTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_group_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_10">

        <com.xwsd.app.view.TitleTextView
            android:id="@+id/ttv_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:text_size="@dimen/TEXT_S"></com.xwsd.app.view.TitleTextView>

        <View
            android:id="@+id/v_3"
            android:layout_width="@dimen/DIMEN_1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_10"
            android:layout_marginRight="@dimen/DIMEN_10"
            android:background="@color/gray_text"></View>

        <com.xwsd.app.view.TitleTextView
            android:id="@+id/ttv_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:text_size="@dimen/TEXT_S"></com.xwsd.app.view.TitleTextView>

    </LinearLayout>

</LinearLayout>